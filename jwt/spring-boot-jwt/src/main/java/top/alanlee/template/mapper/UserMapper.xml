<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.alanlee.template.mapper.UserMapper">
    <select id="getAll"
            resultType="top.alanlee.template.entity.User">
        SELECT *
        FROM t_user
    </select>

    <select id="login"
            resultType="top.alanlee.template.entity.User">
        SELECT *
        FROM t_user
        WHERE username=#{username} and password=#{password}
    </select>
</mapper>